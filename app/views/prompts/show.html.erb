<div class="mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
  <!-- Page Header -->
  <header class="pt-6 pb-4 flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 sm:text-3xl"><%= t('.title') %></h1>
      <p class="mt-2 text-sm text-gray-500">
        <%= t('.created_at', time: l(@prompt.created_at, format: :long)) %>
        <% if @prompt.private %>
          <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            <%= t('.private_label') %>
          </span>
        <% end %>
      </p>
    </div>
    <div>
      <%= link_to t('.back_to_dashboard'), root_path, class: "text-indigo-600 hover:text-indigo-900" %>
    </div>
  </header>

  <!-- Prompt Content -->
  <section class="mt-6 bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6 bg-gray-50">
      <h2 class="text-lg leading-6 font-medium text-gray-900"><%= t('.prompt_content') %></h2>
    </div>
    <div class="border-t border-gray-200 px-4 py-5 sm:p-6">
      <div class="prose max-w-none">
        <%= simple_format h(@prompt.content) %>
      </div>
    </div>
  </section>

  <!-- LLM Responses -->
  <section class="mt-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-4"><%= t('.responses') %></h2>
    
    <% if @prompt.llm_jobs.empty? %>
      <div class="bg-gray-50 p-4 rounded-md text-center text-gray-500">
        <%= t('.no_responses') %>
      </div>
    <% else %>
      <div class="space-y-6">
        <% @prompt.llm_jobs.each do |job| %>
          <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6 bg-gray-50 flex justify-between items-center">
              <div>
                <h3 class="text-lg leading-6 font-medium text-gray-900">
                  <%= job.llm.name %>
                </h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">
                  <%= t('.model_info', size: job.llm.size, creator: job.llm.creator) %>
                </p>
              </div>
              <div>
                <% case job.status %>
                <% when "queued" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    <%= t('.status.queued') %>
                  </span>
                <% when "processing" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <%= t('.status.processing') %>
                  </span>
                <% when "completed" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <%= t('.status.completed') %>
                    <% if job.response_time_ms %>
                      <span class="ml-1">(<%= (job.response_time_ms / 1000.0).round(2) %>s)</span>
                    <% end %>
                  </span>
                <% when "failed" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    <%= t('.status.failed') %>
                  </span>
                <% end %>
              </div>
            </div>
            
            <div class="border-t border-gray-200 px-4 py-5 sm:p-6">
              <% if job.status == "completed" && job.response.present? %>
                <div class="prose max-w-none">
                  <%= simple_format h(job.response) %>
                </div>
              <% elsif job.status == "failed" && job.error_message.present? %>
                <div class="text-red-600">
                  <%= job.error_message %>
                </div>
              <% elsif job.status == "queued" %>
                <div class="text-gray-500 italic">
                  <%= t('.waiting_in_queue') %>
                </div>
              <% elsif job.status == "processing" %>
                <div class="text-gray-500 italic">
                  <%= t('.processing_message') %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </section>
</div> 