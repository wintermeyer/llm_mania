<div class="rounded-md hover:bg-gray-50 transition-colors duration-150">
  <div class="p-3">
    <div class="flex items-start mb-2">
      <div class="flex items-center h-5">
        <% if available %>
          <%= check_box_tag "llm_ids[]", llm.id, true, id: "llm_#{llm.id}", class: "focus:ring-indigo-500 h-5 w-5 text-indigo-600 border-gray-300 rounded" %>
        <% else %>
          <div class="h-5 w-5 flex items-center justify-center bg-gray-100 rounded border border-gray-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
        <% end %>
      </div>
      <div class="ml-3 flex-grow">
        <div class="flex justify-between items-center">
          <label for="<%= available ? "llm_#{llm.id}" : "" %>" class="font-medium <%= available ? 'text-gray-700' : 'text-gray-400' %> block <%= available ? 'cursor-pointer' : '' %>"><%= llm.name %></label>
        </div>
        
        <div class="flex flex-wrap items-center text-xs <%= available ? 'text-gray-500' : 'text-gray-400' %> mt-1">
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 <%= available ? 'text-gray-400' : 'text-gray-300' %>" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <span><%= llm.creator %></span>
          </div>
        </div>
        
        <!-- Model size display -->
        <div class="mt-2">
          <p class="text-sm font-medium <%= available ? 'text-gray-700' : 'text-gray-400' %>"><%= t('prompts.new.model_size_label', size: llm.size) %></p>
        </div>
        
        <% unless available %>
          <div class="mt-2">
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
              <svg class="mr-1.5 h-2 w-2 text-gray-400" fill="currentColor" viewBox="0 0 8 8">
                <circle cx="4" cy="4" r="3" />
              </svg>
              <%= t('prompts.new.upgrade_required') %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 