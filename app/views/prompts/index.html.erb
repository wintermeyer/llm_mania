<div class="mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
  <!-- Shared Header Partial -->
  <%= render partial: 'prompts/header', locals: { 
    title: t('.title'),
    subtitle: t('.subtitle'),
    button_text: t('.new_prompt'),
    button_path: new_prompt_path
  } %>

  <!-- Shared Flash Messages -->
  <%= render partial: 'shared/flash_messages' %>

  <!-- Improved Prompts List with excerpt and LLM info -->
  <div class="mt-8 space-y-10">
    <% if @prompts.any? %>
      <div class="grid grid-cols-1 gap-12 sm:grid-cols-2 lg:grid-cols-3">
        <% @prompts.each do |prompt| %>
          <%= render partial: 'prompt_card', locals: { prompt: prompt } %>
        <% end %>
      </div>
    <% else %>
      <%= render partial: 'empty_state', locals: {
        title: t('.no_prompts_title'),
        description: t('.no_prompts'),
        button_text: t('.create_first_prompt'),
        button_path: new_prompt_path
      } %>
    <% end %>
  </div>
</div> 