<!-- Flash Messages Container -->
<div id="flash-messages">
  <% flash.each do |type, message| %>
    <div class="<%= flash_class(type) %> mb-4 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <%= flash_icon(type) %>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-800"><%= message %></p>
        </div>
        <div class="ml-auto pl-3">
          <div class="-mx-1.5 -my-1.5">
            <button type="button" class="inline-flex rounded-md p-1.5 text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-600" onclick="this.parentElement.parentElement.parentElement.remove()">
              <span class="sr-only">Dismiss</span>
              <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div> 